// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Essence

model AreaOfConcern {
  id             Int             @id
  name           String
  activitySpaces ActivitySpace[]
  alphas         Alpha[]
  competencies   Competency[]
  activities     Activity[]
  workProducts   WorkProduct[]
  roles          Pattern[]
}

model ActivitySpace {
  id              Int           @id
  name            String
  description     String
  areaOfConcernId Int
  areaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  activities      Activity[]
}

model Alpha {
  id              Int           @id
  name            String
  description     String
  states          State[]
  subAlphaIds     String[]
  areaOfConcernId Int
  areaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  workProducts    WorkProduct[]
}

model State {
  id          Int      @id
  name        String
  description String
  checklist   String[]
  alphaId     Int
  alpha       Alpha    @relation(fields: [alphaId], references: [id])
}

model Competency {
  id              Int           @id
  name            String
  description     String
  levels          Json[]
  areaOfConcernId Int
  areaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  roles           Pattern[]
}

// Essence Extention

model SubAlpha {
  nameId       String          @id
  name         String
  description  String
  states       SubAlphaState[]
  // subAlphaIds  String[]
  methodId     Int
  method       Method          @relation(fields: [methodId], references: [id])
  // areaOfConcernId Int
  // areaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  workProducts WorkProduct[]
}

model SubAlphaState {
  nameId         String    @id
  name           String
  description    String
  checklist      String[]
  subAlphaNameId String?
  subAlpha       SubAlpha? @relation(fields: [subAlphaNameId], references: [nameId])
}

// Method

model Method {
  id          Int        @id
  name        String
  creator     String
  description String
  activities  Activity[]
  patterns    Pattern[]
  subAlphas   SubAlpha[]
}

model Activity {
  nameId               String          @id
  name                 String
  description          String
  completionCriterions Json
  entryCriterions      Json
  areasOfConcern       AreaOfConcern[]
  activitySpaces       ActivitySpace[]
  methodId             Int
  method               Method          @relation(fields: [methodId], references: [id])
  performerRoles       Pattern[]
  workProducts         WorkProduct[]
}

model WorkProduct {
  nameId         String          @id
  name           String
  description    String
  levelOfDetails String[]
  areasOfConcern AreaOfConcern[]
  alphas         Alpha[]
  subAlphas      SubAlpha[]
  assigneeRoles  Pattern[]
  activityNameId String
  activity       Activity        @relation(fields: [activityNameId], references: [nameId])
}

model Pattern {
  nameId               String          @id
  name                 String
  description          String
  competencies         Competency[]
  role                 Boolean
  areasOfConcern       AreaOfConcern[]
  methodId             Int
  method               Method          @relation(fields: [methodId], references: [id])
  performedTasks       Activity[]
  assignedWorkProducts WorkProduct[]
  // subpatternIds        String[]
  // alphas               String[]
  // activities           String[]
}
