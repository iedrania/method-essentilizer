// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AreaOfConcern {
  id             Int             @id
  name           String
  activitySpaces ActivitySpace[]
  alphas         Alpha[]
  competencies   Competency[]
  tasks          Task[]
  workProducts   WorkProduct[]
  roles          Role[]
}

model ActivitySpace {
  id              Int           @id
  name            String
  description     String
  areaOfConcernId Int
  areaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  tasks           Task[]
}

model Alpha {
  id              Int           @id
  name            String
  description     String
  areaOfConcernId Int
  areaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  workProducts    WorkProduct[]
  states          State[]
}

model State {
  id          Int      @id
  name        String
  description String
  checklists  String[]
  alphaId     Int
  alpha       Alpha    @relation(fields: [alphaId], references: [id])
}

model Competency {
  id              Int           @id
  name            String
  description     String
  areaOfConcernId Int
  AreaOfConcern   AreaOfConcern @relation(fields: [areaOfConcernId], references: [id])
  roles           Role[]
}

model Method {
  id          Int    @id
  name        String
  description String
  tasks       Task[]
  roles       Role[]
}

model Task {
  id             String          @id
  name           String
  areasOfConcern AreaOfConcern[]
  activitySpaces ActivitySpace[]
  methodId       Int
  method         Method          @relation(fields: [methodId], references: [id])
  workProducts   WorkProduct[]
  performerRoles Role[]
}

model WorkProduct {
  id             String          @id
  name           String
  areasOfConcern AreaOfConcern[]
  alphas         Alpha[]
  taskId         String
  task           Task            @relation(fields: [taskId], references: [id])
  assigneeRoles  Role[]
}

model Role {
  id                   String          @id
  name                 String
  areasOfConcern       AreaOfConcern[]
  competencies         Competency[]
  methodId             Int
  method               Method          @relation(fields: [methodId], references: [id])
  performedTasks       Task[]
  assignedWorkProducts WorkProduct[]
}
